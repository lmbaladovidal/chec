<!DOCTYPE html>
<html lang="en">

<!-- Head-->
<%- include("../partials/head") %>

<body>
    <!-- Header-->
    <%- include("../partials/header") %>

    <section class="pd-product-area">
        <div class="pd-product-imgs">
            <img src="/images/img-beer-temporary.jpg" alt="beer">
        </div>
        <div class="pd-product-info">
            <h3>Administracion de Producto</h3>
            <form action="/product/productAdmin/<%= cervezaToEdit.id %>?_method=PUT" method="POST">
                <ul class="pd-beer-attributes">
                    <li>
                        <h5>Nombre</h5>
                        <p><input type="text" name="name" value="<%=cervezaToEdit.name%>"></p>
                    </li>
                    <li>
                        <h5>Descripción</h5>
                        <p><input type="text" name="description" value="<%=cervezaToEdit.description%>"></p>
                    </li>
                    <li>
                        <h5>Amargor: </h5>
                        <p><input type="text" name="bitterness" value="<%=cervezaToEdit.bitterness%>"></p>
                    </li>                  
                    <li>
                        <h5>Alcohol: </h5>
                        <p><input type="text" name="alcohol" value="<%=cervezaToEdit.alcohol%>"></p>
                    </li>
                    <li>
                        <h5>Color: </h5>
                        <p><input type="text" name="color" value="<%=cervezaToEdit.color%> SRM"></p>
                    </li>
                    <li>
                        <h5>Lúpulo/s: </h5>
                        <p><input type="text" name="hop" value="<%=cervezaToEdit.hop%>"></p>
                    </li>
                    <li>
                        <h5>Gasificación: </h5>
                        <p><input type="text" name="carbonation" value="<%=cervezaToEdit.carbonation%>" ></p>
                    </li>
                </ul>
                <div class="pd-options">
                    <form action="product/productPage/<%= cervezaToEdit.id %>?_method=DELETE" method="POST">
                        <input type="submit" class="lg-submit" value="Eliminar">
                    </form>
                
                <input type="submit" class="lg-submit" value="Guardar">
                <input type="reset" class="lg-submit" name="limpiar" value="Limpiar">
                </div>
            </form>
        </div>

    </section>
    </div>
    <!-- Footer-->
    <%- include("../partials/footer") %>
</body>

</html>