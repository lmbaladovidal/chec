<!DOCTYPE html>
<html lang="en">

<!-- Head-->
<%- include("./partials/head") %>

<body>
    <!-- Header-->
    <%- include("./partials/header") %>


    <main class="pc-main">
        <section class="pc-cart">
            <div class="pc-product-carrito"> 
                <div class="pc-product">
                    <img class="pc-img-product" src="/images/img-beer-temporary.jpg" alt="beer">
                </div>
            </div>
             
            <div class="pc-product-group">
                <div class="pc-product-cantidad">
    
                        <div class="pc-quantity">
                            
                            <div class="pc-counter">
                                <label class="pc-quantity-label-det" for="botella500">Botella 500 ml</label>
                                
                                <input type="button" id="decrease" value="-" class="minus">
                                <input type="number" class="pc-product-quantity" step="1" min="0" max="17" name="quantity"
                                    value="0" title="Cantidad" size="4" placeholder="" inputmode="numeric">
                                <input type="button" id="increase" value="+" class="plus">
                                <label class="pc-counter-label-det-valor" for="botella500">250</label> 
                                <button class="pc-eliminar lg-a"> <i class="fas fa-trash-alt"></i></button>
                            </div>
                            
                            <div class="pc-counter">
                                <label class="pc-quantity-label-det" for="botella1l">Botella 1 lt</label>
                                
                                <input type="button" id="decrease" value="-" class="minus">
                                <input type="number" class="pc-product-quantity" step="1" min="0" max="17" name="quantity"
                                    value="0" title="Cantidad" size="4" placeholder="" inputmode="numeric">
                                <input type="button" id="increase" value="+" class="plus">
                                <label class="pc-counter-label-det-valor" for="botella500">500</label>  
                                <button class="pc-eliminar lg-a"> <i class="fas fa-trash-alt"></i></button>
                            </div>
                                
                            <div class="pc-counter">
                                <label class="pc-quantity-label-det" for="pack6500">Pack x 6 - 500 ml</label>
                                
                                <input type="button" id="decrease" value="-" class="minus">
                                <input type="number" class="pc-product-quantity" step="1" min="0" max="17" name="quantity"
                                    value="0" title="Cantidad" size="4" placeholder="" inputmode="numeric">
                                <input type="button" id="increase" value="+" class="plus">
                                <label class="pc-counter-label-det-valor" for="botella500">800</label>
                                <button class="pc-eliminar lg-a"> <i class="fas fa-trash-alt"></i></button>
                            </div>
                                
                            <div class="pc-counter">
                                <label class="pc-quantity-label-det" for="pack61l">Pack x 6 - 1 lt</label>

                                <input type="button" id="decrease" value="-" class="minus">
                                <input type="number" class="pc-product-quantity" step="1" min="0" max="17" name="quantity"
                                    value="0" title="Cantidad" size="4" placeholder="" inputmode="numeric">
                                <input type="button" id="increase" value="+" class="plus">
                                <label class="pc-counter-label-det-valor" for="botella500">1200</label> 
                                <button class="pc-eliminar lg-a"> <i class="fas fa-trash-alt"></i></button>
                            </div>
                            <button class="pc-options-button lg-button" >Limpiar</button>
                        </div>
                </div>

            </div>

    </main>
    <section class="pc-bottom-content">
        <div class="pc-label-total-group-envio">
            <label class="pc-label-envío" for="label-envio">Envio a:</label>
            
            <input type="text" size="15" class="rg-input" value="Independencia 717. Piso 1 Dto A" name="nombre">
            <!--<input type="text" id="name" name="name" required minlength="0" maxlength="50" size="14"> 
            <input placeholder="Independencia 717. Piso 1 Dto ´A´" >
            <p><textarea name="comentario" rows="5" cols="50">Independencia 717. Piso 1 Dto "A" </textarea></p>-->
        </div>
        
        <div class="pc-label-total-group">
            <label class="pc-label-envio" for="label-envio">Código postal de envio:</label>
            <input type="text" size="15" class="rg-input" value="5200" name="nombre">
            <h2><label class="pc-txtLabel-totalenvio" for="txtLabel-totalenvio">   $ 700 </label></h2>
        </div>

        <div class="pc-label-total-group">
            <p class="pc-label-totalenvio" for="label-totalenvio">Total con envio: </p>
            <h2><label class="pc-txtLabel-totalenvio" for="txtLabel-totalenvio">   $ 1200 </label></h2>
        </div>
        
    </section>  
    
    <div class="pc-options">
        <button class="pc-options-button lg-button">Finalizar Compra</button>
    </div>
    
    <!-- Footer-->
    <%- include("./partials/footer") %>

</body>

</html>